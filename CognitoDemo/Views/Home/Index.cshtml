

@using System.Security.Claims;
@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    <p>
        Authenticated!
    </p>
    <table class="table table-bordered">
        <tr>
            <th>Claim Type</th>
            <th>Value</th>
        </tr>
        @foreach (var item in User.Claims)
        {
            <tr>
                <td>
                    @item.Type
                </td>
                <td>
                    @item.Value
                </td>
            </tr>
        }
    </table>
}
